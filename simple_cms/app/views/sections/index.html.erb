<% @page_title = "Sections" %>

<%= link_to("<< Back to Pages", {controller: 'pages', action: 'index', subject_id: @page.subject_id}, class: 'back-link') %>

<div class="sections index">
	<h2>Sections</h2>

	<%= link_to(image_tag('plus_sign.png', size: '11x11', alt: '+') + " Add New Section", {action: 'new', page_id: @page.id}, class: 'action new') %>

	
	<table class="listing" summary="Section list">
		<tr class="header">
		  <th>&nbsp;</th>
	      <th>Page</th>
	      <th>Section</th>
	      <th>Content Type</th>
	      <th>Visible</th>
	      <th>Actions</th>
		</tr>
		<% @sections.each do |section| %>
			<tr class="<%= cycle('odd','even') %>">
			  <td><%= section.position %></td>
		      <td><%= section.page.name if section.page %></td>
		      <td><%= section.name %></td>
		      <td><%= section.content_type %></td>
		      <td class="center"><%= status_tag(section.visible) %></td>
				<td class="actions">
					 <%= link_to("Show", {action: 'show', id: section.id, page_id: @page.id},class: 'action show') %>
					<%= link_to "Edit", {action: 'edit', id: section.id, page_id: @page.id}, class: 'action edit' %>
					<%= button_to("Delete", {action: 'destroy', id: section.id, page_id: @page.id}, method: :delete, class: 'action delete', data: { confirm: "Are you sure?" }) %>
				</td>
			</tr>
		<% end %>	
	</table>
</div>

