<%= link_to "<< Back to List", :back %>

<div class="pages edit">
	<h2>Update Page</h2>

	<%= form_for @page do |f| %>

	  <table summary="Page detail view">
			<tr>
				<th>Name</th>
				<td>
					<%= f.label :name %><br>
					<%= f.text_field :name %>
				</td>
			</tr>
			<tr>
				<th>Position</th>
				<td>
					<%= f.label :position %><br>
					<%= f.text_field :position %>
				</td>
			</tr>
			<tr>
				<th>Visible</th>
				<td>
					<%= f.label :visible %><br>
					<%= f.text_field :visible %>
				</td>
			</tr>
			<tr>
				<th>Link</th>
				<td>
					<%= f.label :permalink %><br>
					<%= f.text_field :permalink %>
				</td>
			</tr>
		</table>
	 
	  <div class="form-buttons">
	    <%= f.submit "Update Page"%>
	  </div>

	<% end %>
</div>
